<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Data</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            width: 100%;
            text-align: center;
        }

        table {
            border: 1px solid black;
        }

        th {
            text-align: center;
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <h1>Data of the users.</h1>

    <table>
        <tr>
            <th>id</th>
            <th>username</th>
            <th>email</th>
        </tr>
        <% for(let user of users){ %>
            <tr>
                <th>
                    <%= user.id %>
                </th>
                <th>
                    <%= user.username %>
                </th>
                <th>
                    <%= user.email %>
                </th>
                <th>
                    <form action="/user/<%=user.id%>/edit" method="get">
                        <button>Edit username</button>
                    </form>
                </th>
                <th>
                    <button>delete user</button>
                </th>
            </tr>
            <% } %>

    </table>
</body>

</html>